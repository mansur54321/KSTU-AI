{
  "manifest_version": 3,
  "name": "AI Stealth Solver (Universal)",
  "version": "2.1.0",
  "description": "Помощник для сдачи тестов в системах Platonus и Univer с использованием Gemini AI",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "include_globs": [
        "*platonus*",
        "*univer*",
        "*kstu.kz*",
        "*localhost*",
        "*127.0.0.1*",
        "file://*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}