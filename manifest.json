{
  "manifest_version": 3,
  "name": "AI Test Solver (Gemini 2.5)",
  "version": "2.5",
  "description": "Автоматическое решение тестов с помощью Google Gemini 3.0 Pro",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://univer.kstu.kz/*",
    "https://generativelanguage.googleapis.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://univer.kstu.kz/student/AttemptPage*",
        "file:///*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
